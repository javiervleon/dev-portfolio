<header
  class="flex justify-end lg:justify-center items-center py-5 w-full xl:w-[1120px] mx-auto relative"
>
  <!-- Desktop nav -->
  <nav class="hidden md:flex flex-row gap-x-10 opacity-80">
    <a href="#top">Inicio</a>
    <a href="#sobre-mi">Sobre mí</a>
    <a href="#experiencia">Experiencia</a>
    <a href="#proyectos">Proyectos</a>
    <a href="#contacto">Contacto</a>
  </nav>

  <!-- Mobile nav (checkbox + peer to avoid extra JS) -->
  <div class="md:hidden mx-5">
    <!-- hidden checkbox to toggle menu -->
    <input id="nav-toggle" type="checkbox" class="peer hidden" />

    <!-- hamburger button -->
    <label
      for="nav-toggle"
      class="inline-flex items-center justify-center p-2 rounded-md cursor-pointer border border-transparent hover:bg-gray-100"
      aria-label="Toggle navigation"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </label>

    <!-- mobile menu: hidden by default, shown when checkbox (peer) is checked -->
    <nav
      class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 shadow-md rounded-md p-3 flex-col gap-2 hidden peer-checked:flex z-50"
    >
      <a
        href="#top"
        class="block px-2 py-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700"
        >Inicio</a
      >
      <a
        href="#sobre-mi"
        class="block px-2 py-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700"
        >Sobre mí</a
      >
      <a
        href="#experiencia"
        class="block px-2 py-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700"
        >Experiencia</a
      >
      <a
        href="#proyectos"
        class="block px-2 py-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700"
        >Proyectos</a
      >
      <a
        href="#contacto"
        class="block px-2 py-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700"
        >Contacto</a
      >
    </nav>
  </div>
</header>
